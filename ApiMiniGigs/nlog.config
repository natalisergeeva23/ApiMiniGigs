<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off">

	<variable name="DirectoryLogs" value="${basedir}/logs/${shortdate}"/>

	<extentions>
		<add assembly="NLog.Web.AspNetCore" />
	</extentions>

	<targets>
		<target xsi:type="File" name="AllFileLogs"
				fileName="${DirectoryLogs}/nlog-${shortdate}.log" deleteOldFileOnStartup="true" concurrentWrites="true"/>
		<target name="TcpOutlet" xsi:type="NLogViewer" address="tcp://localhost:4805"/>
		<target xsi:type="Console" name="console" layout="${longdate} ${uppercase:${level}} ${message}" />

		<!-- File target for logging Info and above -->
		<target xsi:type="File" name="infoFile" fileName="${basedir}/logs/info.log"
				layout="${longdate} ${uppercase:${level}} ${message}" />

		<!-- File target for logging Error and above -->
		<target xsi:type="File" name="errorFile" fileName="${basedir}/logs/error.log"
				layout="${longdate} ${uppercase:${level}} ${message}" />

		<!-- Mail target for sending Error and Fatal logs via email -->
		<target xsi:type="Mail" name="mail"
				smtpServer="smtp.gmail.com"
				smtpPort="587"
				smtpAuthentication="Basic"
				smtpUserName="isip_d.v.matushkin@mpt.ru"
				smtpPassword="vrfy qkry jgtr tysu"
				enableSsl="true"
				from="isip_d.v.matushkin@mpt.ru"
				to="isip_d.v.matushkin@mpt.ru"
				subject="Error Log"
				layout="${longdate} ${uppercase:${level}} ${message}" />
	</targets>
	<rules>
		<logger name="*" minlevel="Trace" writeTo="AllFileLogs">
			<filters>
				<when condition="contains(logger, 'Microsoft.AspNetCore.Server.Kestrel.Http2')" action="Log"/>
			</filters>
		</logger>
		<logger name="*" minlevel="Trace" writeTo="TcpOutlet"/>
		<logger name="*" minlevel="Trace" writeTo="console" />

		<!-- Log Info and above to infoFile -->
		<logger name="*" minlevel="Info" writeTo="infoFile" />

		<!-- Log Error and above to errorFile -->
		<logger name="*" minlevel="Error" writeTo="errorFile" />

		<!-- Log Error and Fatal to mail -->
		<logger name="*" minlevel="Error" writeTo="mail" />
		<logger name="*" minlevel="Fatal" writeTo="mail" />
	</rules>

</nlog>